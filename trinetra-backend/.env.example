# ═══ Trinetra Backend Environment Configuration ═══
# Copy this file to .env and fill in the values.

# Firebase Web API Key (from Firebase Console → Project Settings → General)
FIREBASE_API_KEY=your_firebase_api_key_here

# Path to Firebase Service Account JSON (absolute or relative to project root)
# Download from Firebase Console → Project Settings → Service Accounts → Generate new private key
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Firebase Project ID
FIREBASE_PROJECT_ID=trinetra-intel-v3

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Crawler Configuration
CRAWLER_INTERVAL_SECONDS=300
